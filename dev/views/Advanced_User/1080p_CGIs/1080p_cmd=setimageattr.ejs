    <% include ../../_partials/template/_outdated.ejs %>

    <div id="wrapper">

        <header><% include ../../_partials/template/_header.ejs %></header>
        <!-- Navbar-->

            <div class="container mb">
                <h1>1080p CGI Commands - Set Image Attribute</h1>
                <hr>
            </div>

            <div class="clearfix"></div>

        <!-- #############################################  Body ############################################# -->

            <div class="container main">

              <section class="row" style="margin-top: 15px;">
                <!-- Media Container -->

                  <div class="col-12">

                      <h2>Video &amp; Audio :: Set Image Attribute</h2>
                      <h3>param.cgi?cmd=setimageattr</h3>

                      <div class="table-responsive">
                        <table class="table table-hover">
                          <tr>
                            <th>Function</th>
                            <td>Set image parameter</td>
                          </tr>
                          <tr>
                            <th>Authority</th>
                            <td>admin</td>
                          </tr>
                          <tr>
                            <th>Syntax</th>
                            <td><code>/cgi-bin/hi3510/param.cgi[?cmd=setimageattr&amp;-brightness=&amp;-saturation=&amp;-contrast=&amp;-hue=&amp;-flip=&amp;-mirror=&amp;-scene=]</code></td>
                          </tr>
                          <tr>
                            <th rowspan="19">Parameter</th>
                            <td>display_mode: 0-255</td>
                          </tr>
                          <tr>
                            <td>brightness: 0-100</td>
                          </tr>
                          <tr>
                            <td>saturation: 0-255</td>
                          </tr>
                          <tr>
                            <td>contrast: 0-100</td>
                          </tr>
                          <tr>
                            <td>sharpness: 0-100</td>
                          </tr>
                          <tr>
                            <td>ae: 0-65535</td>
                          </tr>
                          <tr>
                            <td>aemode: 0-3?</td>
                          </tr>
                          <tr>
                            <td>imgmode: 0-3?</td>
                          </tr>
                          <tr>
                            <td>targety: Exposure 0-255</td>
                          </tr>
                          <tr>
                            <td>hue: 0-255?</td>
                          </tr>
                          <tr>
                            <td>flip: on, off</td>
                          </tr>
                          <tr>
                            <td>mirror: on, off</td>
                          </tr>
                          <tr>
                            <td>night: on, off</td>
                          </tr>
                          <tr>
                            <td>shutter: ?</td>
                          </tr>
                          <tr>
                            <td>wdr: on, off</td>
                          </tr>
                          <tr>
                            <td>noise: 0 - 3?</td>
                          </tr>
                          <tr>
                            <td>gamma: 0 - 3?</td>
                          </tr>
                          <tr>
                            <td>night: on, off</td>
                          </tr>
                          <tr>
                            <td>gc: Night illumination Gain Control 0-65535</td>
                          </tr>
                          <tr>
                            <th>Return</th>
                            <td>Success, Error</td>
                          </tr>
                          <tr>
                            <th>Remarks</th>
                            <td>Different device, different image parameter, for details, pleae refer to Appendix 1 (Device Type Definition)</td>
                          </tr>
                          <tr>
                            <th>Example</th>
                            <td><code>http://admin:instar@192.168.178.88/cgi-bin/hi3510/param.cgi?cmd=setimageattr&-brightness=1&-saturation=1&-contrast=1&amp;-hue=1&amp;-flip=on&amp;-mirror=on&amp;-scene=indoor&amp;</code></td>
                          </tr>
                        </table>
                      </div>

                    </div>

                </section>  <!-- Close Media Container -->

                <div class="clearfix" style="margin-bottom: 50px;"></div>

          </div>
