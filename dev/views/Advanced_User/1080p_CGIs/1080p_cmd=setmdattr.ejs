    <div id="wrapper">

        <header><% include ../../_partials/template/_header.ejs %></header>
        <!-- Navbar-->

            <div class="container mb">
                <h1>1080p CGI Commands - Set Motion Detection Attribute</h1>
                <hr>
            </div>

            <div class="clearfix"></div>

        <!-- #############################################  Body ############################################# -->

            <div class="container main">

              <section class="row" style="margin-top: 15px;">
                <!-- Media Container -->

                <div class="col-12">

                  <h2>Alarm :: Set Motion Detection Attribute</h2>
                  <h3>param.cgi?cmd=setmdattr</h3>

                  <div class="table-responsive">
                    <table class="table table-hover">
                      <tr>
                        <th>Function</th>
                        <td>Set Motion Detection Area Parameter</td>
                      </tr>
                      <tr>
                        <th>Authority</th>
                        <td>admin</td>
                      </tr>
                      <tr>
                        <th>Syntax</th>
                        <td><code>/cgi-bin/hi3510/param.cgi[?cmd=setmdattr&amp;-enable=&amp;-s=&amp;-name=&amp;-x=&amp;-y=&amp;-w=&amp;-h=]</code></td>
                      </tr>
                      <tr>
                        <th rowspan="7">Parameter</th>
                        <td>enable: Enable or Disable Motion Detection for Area [name] (1,0)</td>
                      </tr>
                      <tr>
                        <td>s: Sensitivity Scope [0-100]</td>
                      </tr>
                      <tr>
                        <td>name: Alarm Area Scope [1-4]</td>
                      </tr>
                      <tr>
                        <td>x: Area x-Coordinate</td>
                      </tr>
                      <tr>
                        <td>y: Area y-Coordinate</td>
                      </tr>
                      <tr>
                        <td>w: Area Width</td>
                      </tr>
                      <tr>
                        <td>h: Area Height</td>
                      </tr>
                      <tr>
                        <th>Return</th>
                        <td>Success, Error</td>
                      </tr>
                      <tr>
                        <th>Remarks</th>
                        <td>The max coordinate and height and width are based on the max resolution</td>
                      </tr>
                      <tr>
                        <th>Example</th>
                        <td><code>http://admin:instar@192.168.178.88/cgi-bin/hi3510/param.cgi?cmd=setmdattr&-enable=1&-s=50&-name=1&amp;-x=0&amp;-y=0&amp;-w=60&amp;-h=60</code></td>
                      </tr>
                    </table>
                  </div>

                </div>

                </section>  <!-- Close Media Container -->

