        "filter": [
            "lowercase",
            "word_delimiter"
        ]
      }
    }
  },
  "mappings": {
    "article": {
      "properties": {
        "title": {
          "type": "string"
        },
        "series": {
          "type": "string",
          "index" : "not_analyzed"
        },
        "models": {
          "type": "string",
          "index" : "not_analyzed"
        },
        "description": {
          "type": "string",
          "analyzer": "english"
        },
        "link": {
          "type": "string",
          "index" : "not_analyzed"
        },
        "title2": {
          "type": "string"
        },
        "chapters" : {
        "type" : "string",
        "fields" : {          
          "raw" : {
            "type" : "string",
            "index" : "not_analyzed"
            }
          }
        },
        "tags": {
          "type": "string",
          "analyzer": "keyword",
